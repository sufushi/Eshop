<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:clickable="false"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_interest_good_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:src="@drawable/logo"
                app:riv_corner_radius_top_left="20dp"
                app:riv_corner_radius_top_right="20dp"/>

            <TextView
                android:id="@+id/tv_interest_good_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/good_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimen_text_size_middle"/>

            <TextView
                android:id="@+id/tv_interest_good_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/good_price"
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_text_size_middle"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
