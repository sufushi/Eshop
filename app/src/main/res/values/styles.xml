<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/whitesmoke</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <!--启动界面-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionBarSize">46dp</item>
    </style>

    <style name="TabIndicator" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/bg_et_cursor</item>
        <item name="android:textColorHint">@color/color_text_login</item>
    </style>

    <style name="BaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomMatisseTheme" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.title.color">@color/zhihu_album_title_text</item>
        <item name="album.count.color">@color/zhihu_album_count_text</item>
        <item name="album.selected">@android:color/white</item>
        <item name="album.placeholder">@color/zhihu_album_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.color">@color/zhihu_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.color">@color/zhihu_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.color">@color/colorPrimary</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.color">@color/zhihu_capture</item>
    </style>

    <style name="AnimDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_out</item>
    </style>

    <style name="AnimUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_half_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_half_bottom_out</item>
    </style>

    <style name="AnimHorizontal" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_left_out</item>
    </style>

    <style name="AnimRight" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_right_out</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="BottomDialog" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 黑色正常大小的文字 -->
    <style name="style_black_normal_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_text_size_middle</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 分割线 -->
    <style name="style_separate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/gray</item>
    </style>

    <declare-styleable name="PayPwdView">
        <attr name="count" format="integer" />
        <attr name="border_color" format="color" />
        <attr name="dot_color" format="color" />
    </declare-styleable>

    <style name="layout_input_amount_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">2px</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!--键盘数字-->
    <style name="btn_input_num_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/selector_item_pressed</item>
    </style>

</resources>
